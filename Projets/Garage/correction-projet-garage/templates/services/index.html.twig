    <div  id ="content" class="container">
        <h1 class="mb-3 mt-3">Nos services</h1>



        <div class="card-group">

            {% for service in services %}
                <div class="col-4 mb-3">

                    <div class="card">
                        <img src="../../image/{{service.image}}" class="card-img-top" alt="{{ service.image }}">
                        <div class="card-body">
                            <h5 class="card-title">{{(service.nom)| capitalize }}</h5>
                            <p class="card-text">A partir de {{ service.prix }} €</p>
                        </div>
                    </div>

                </div>
            {% endfor %}

        </div>

        <div class="callToAction bg-secondary p-3 mb-5 h-75 text-center rounded">
            <a href="{{ path("app_login") }}"><button class="btn btn-primary col-6">Se connecter pour prendre rendez-vous</button></a>
        </div>
